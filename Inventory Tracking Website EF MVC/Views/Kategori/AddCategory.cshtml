@{
     Layout="~/Views/Shared/Layout.cshtml";
}




@using (Html.BeginForm("AddCategory", "Kategori", FormMethod.Post))
{


    @Html.AntiForgeryToken()
    @Html.TextBoxFor(m => m.Kategoriad, new { @class = "form-control", placeholder = "Kategori adı giriniz" })
    @Html.ValidationMessageFor(model => model.Kategoriad, "", new { @class = "text-danger" })
    <br />
    <input type="submit" value="Ekle" class="btn btn-danger" style="margin-top:10px" />

}



