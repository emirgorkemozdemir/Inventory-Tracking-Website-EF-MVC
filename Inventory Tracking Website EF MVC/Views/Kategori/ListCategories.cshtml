@model List<Kategoritablosu>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout="~/Views/Shared/Layout.cshtml";
}

<table  class="table table-bordered">
    <thead>
        <tr>
            <th>Kategori ID</th>
            <th>Kategori Ad</th>
            <th>Kategoriyi Sil</th>
            <th>Kategoriyi Düzenle</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Kategoriid</td>
                <td>@category.Kategoriad</td>
                <td><a class="btn btn-danger" href="/Kategori/DeleteCategory/@category.Kategoriid">Sil</a></td>
                <td><a class="btn btn-warning" href="/Kategori/EditCategory/@category.Kategoriid">Düzenle</a></td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" href="/Kategori/AddCategory">Kategori Ekle</a>

