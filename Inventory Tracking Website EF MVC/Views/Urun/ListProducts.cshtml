@using Stok_Takip_Mvc_.net6.Models
@model List<Uruntablosu>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}


<table  class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Kategorisi</th>
            <th>Ürün Stok Durumu</th>
            <th>Ürünü Sil</th>
            <th>Ürünü Düzenle</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Urunad</td>
                <td>@product.Urunfiyat</td>
                <td>@product.Kategori.Kategoriad</td>
                <td>@product.Urunstok</td>
                <td><a class="btn btn-danger" href="/Urun/DeleteProduct/@product.Urunid">Ürünü Sil</a></td>
                <td><a class="btn btn-warning" href="/Urun/EditProduct/@product.Urunid">Ürünü Düzenle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Urun/AddProduct" class="btn btn-success">Ürün Ekle</a>


