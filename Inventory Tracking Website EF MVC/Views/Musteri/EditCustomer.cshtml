*@
@{
     Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("EditCustomer", "Musteri", FormMethod.Post))
{

@Html.AntiForgeryToken()

@Html.HiddenFor(m=>m.Musteriid)

@Html.TextBoxFor(m => m.Musteriad, new { @class = "form-control", placeholder = "Müşteri adı giriniz" })
@Html.ValidationMessageFor(model => model.Musteriad, "", new { @class = "text-danger" })
<br />

@Html.TextBoxFor(m => m.Musterisoyad, new { @class = "form-control", placeholder = "Müşteri soyadı giriniz" })
@Html.ValidationMessageFor(model => model.Musterisoyad, "", new { @class = "text-danger" })
<br />

<input type="submit" class="btn btn-danger" value="Düzenle" />


}

